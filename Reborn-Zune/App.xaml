                                        BorderBrush="DarkGray"
                                        BorderThickness="1"
                                        Style="{StaticResource CircleButtonStyle}"
                                        Visibility="Visible">
                                            <Grid>
                                                <TextBlock
                                                FontFamily="Segoe MDL2 Assets"
                                                FontSize="9"
                                                    Foreground="White"
                                                FontWeight="Bold"
                                                Text="&#xE893;" />
                                            </Grid>
                                        </Button>
                                        <Button
                                        x:Name="TilePageButton"
                                        Width="18"
                                        Height="17"
                                        Margin="6,0,0,6"

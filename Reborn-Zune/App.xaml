                                            BorderThickness="1"
                                            Style="{StaticResource CircleButtonStyle}">
                                            <Grid>
                                                <TextBlock
                                                    FontFamily="Segoe MDL2 Assets"
                                                    FontSize="9"
                                                    FontWeight="Bold"
                                                    Foreground="White"
                                                    Text="&#xE892;" />
                                            </Grid>
                                        </Button>
                                        <Button

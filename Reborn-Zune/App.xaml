                                        BorderBrush="DarkGray"
                                        BorderThickness="1"
                                        Style="{StaticResource CircleButtonStyle}">
                                            <Grid>
                                                <TextBlock
                                                FontFamily="Segoe MDL2 Assets"
                                                FontSize="9"
                                                    Foreground="White"
                                                FontWeight="Bold"
                                                Text="&#xE892;" />
                                            </Grid>
                                        </Button>
                                        <Button
                                        x:Name="PlayPauseButton"
                                        Width="33"
                                        Height="33"
                                        Margin="0,0,2,1"
                                        controls:DockPanel.Dock="Left"
                                        Background="Transparent"
                                        BorderBrush="DarkGray"
                                        BorderThickness="1"
                                        Style="{StaticResource CircleButtonStyle}">
                                            <Grid>
                                                <TextBlock
                                                x:Name="PlayPauseSymbol"
                                                FontFamily="Segoe MDL2 Assets"
                                                FontSize="15"
                                                    Foreground="White"
                                                FontWeight="Bold"
                                                Text="&#xE768;" />
                                            </Grid>
                                        </Button>
                                        <Button
                                        x:Name="NextTrackButton"

                                            Background="Transparent"
                                            Foreground="LightGray"
                                            Style="{StaticResource LeftSmallCheckBoxStyle}">
                                            <Grid>
                                                <TextBlock
                                                    x:Name="RepeatSymbol"
                                                    FontFamily="Segoe MDL2 Assets"
                                                    FontSize="10"
                                                    FontWeight="Bold"
                                                    Text="&#xE8EE;" />
                                            </Grid>
                                        </CheckBox>

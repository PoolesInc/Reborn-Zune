                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="50"
                        FontWeight="Bold"
                        Text="Need Implementation" />
                </Grid>
            </PivotItem>
            <PivotItem Header="ALBUMS">
                <Grid>
                    <!--<Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1.8*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border
                        Grid.Column="0"
                        Width="1"
                        Height="800"
                        Margin="0,25,0,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Background="DarkGray" />-->
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="50"
                        FontWeight="Bold"
                        Text="Need Implementation" />
                </Grid>
            </PivotItem>
            <PivotItem Header="SONGS">
                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="50"
                    FontWeight="Bold"
                    Text="Need Implementation" />
            </PivotItem>
            <PivotItem Header="PLAYLISTS">
                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="50"

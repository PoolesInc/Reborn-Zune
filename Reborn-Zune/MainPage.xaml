<Page
    x:Class="Reborn_Zune.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:custom_controls="using:Reborn_Zune.Control"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Reborn_Zune"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="using:Reborn_Zune.Model"
    mc:Ignorable="d">

    <Grid x:Name="rootPanel" Background="White">

        <Grid.RowDefinitions>
            <RowDefinition Height="90" />
            <RowDefinition Height="*" />
            <RowDefinition Height="100" />
        </Grid.RowDefinitions>

        <StackPanel
            Width="15"
            Height="53"
            Margin="0,32,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="Green" />

        <TextBlock
            Margin="35,45,0,0"
            FontSize="22"
            FontWeight="Light"
            Foreground="Black"
            Text="collection" />


        <Pivot Grid.Row="1" Style="{StaticResource PivotStyle1}">
            <Pivot.HeaderTemplate>
                <DataTemplate>
                    <Grid Margin="-8,0,0,0">
                        <TextBlock
                            FontSize="15"
                            FontWeight="Medium"
                            Text="{Binding}" />
                    </Grid>
                </DataTemplate>
            </Pivot.HeaderTemplate>
            <PivotItem Header="ARTISTS">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition MinWidth="210" MaxWidth="480" />
                        <ColumnDefinition MinWidth="265" MaxWidth="910" />
                        <ColumnDefinition MinWidth="240" />
                    </Grid.ColumnDefinitions>

                    <Border
                        Grid.Column="0"
                        Width="1"
                        Height="800"
                        Margin="0,25,0,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Background="DarkGray" />
                    <controls:DockPanel Grid.Column="0">
                        <TextBlock
                            Margin="55,5,0,0"
                            controls:DockPanel.Dock="Top"
                            FontSize="11"
                            FontWeight="Bold"
                            Foreground="Black"
                            Text="16 ARTISTS" />
                        <ListView
                            x:Name="ArtistList"
                            Margin="55,12,0,0"
                            controls:DockPanel.Dock="Top"
                            ItemsSource="{x:Bind viewModel.Artists}">

                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="Margin" Value="-10,0,0,0" />
                                    <Setter Property="MinHeight" Value="26" />
                                </Style>
                            </ListView.ItemContainerStyle>
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="model:LocalArtistModel">
                                    <Grid>
                                        <TextBlock
                                            FontFamily="Microsoft YaHei UI"
                                            FontSize="13"
                                            Text="{x:Bind Name}" />
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </controls:DockPanel>
                    <Border
                        Grid.Column="1"
                        Width="1"
                        Height="800"
                        Margin="0,25,0,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Background="DarkGray" />
                    <controls:DockPanel Grid.Column="1">
                        <TextBlock
                            Margin="20,5,0,0"
                            controls:DockPanel.Dock="Top"
                            FontSize="11"
                            FontWeight="Bold"
                            Foreground="Black"
                            Text="25 ALBUMS BY DATE ADDED" />
                        <GridView
                            x:Name="AlbumList"
                            Margin="0,12,0,0"
                            Padding="0,0,25,0"
                            controls:DockPanel.Dock="Top"
                            ItemsSource="{x:Bind viewModel.Albums}">
                            <GridView.ItemContainerStyle>
                                <Style TargetType="GridViewItem">
                                    <Setter Property="Margin" Value="27,0,0,25" />
                                    <Setter Property="MinHeight" Value="26" />
                                </Style>
                            </GridView.ItemContainerStyle>
                            <GridView.ItemTemplate>
                                <DataTemplate x:DataType="model:LocalAlbumModel">
                                    <StackPanel>
                                        <Image Width="95" Source="{x:Bind Thumbnail}" />
                                        <TextBlock
                                            Margin="0,3,0,0"
                                            FontSize="12"
                                            FontWeight="Medium"
                                            Text="{x:Bind AlbumTitle}" />
                                        <TextBlock
                                            Margin="0,0,0,0"
                                            FontSize="12"
                                            FontWeight="Medium"
                                            Foreground="DarkGray"
                                            Text="{x:Bind Artist}" />
                                    </StackPanel>
                                </DataTemplate>
                            </GridView.ItemTemplate>
                        </GridView>
                    </controls:DockPanel>
                    <Border
                        Grid.Column="3"
                        Width="1"
                        Height="800"
                        Margin="0,25,43,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Background="DarkGray" />
                    <controls:DockPanel Grid.Column="2" Margin="0,0,43,0">
                        <TextBlock
                            Margin="30,5,0,0"
                            controls:DockPanel.Dock="Top"
                            FontSize="11"
                            FontWeight="Bold"
                            Foreground="Black"
                            Text="141 SONGS BY RATING" />
                        <ListView
                            x:Name="SongList"
                            Margin="30,10,0,0"
                            controls:DockPanel.Dock="Top"
                            ItemsSource="{x:Bind viewModel.Musics}">
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="Margin" Value="-10,0,0,0" />
                                    <Setter Property="MinHeight" Value="26" />
                                </Style>
                            </ListView.ItemContainerStyle>

                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="model:LocalMusicModel">
                                    <Grid>
                                        <TextBlock
                                            FontFamily="Microsoft YaHei UI"
                                            FontSize="13"
                                            Text="{x:Bind Title}" />
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </controls:DockPanel>
                </Grid>
            </PivotItem>

        <Grid.RowDefinitions>
            <RowDefinition Height="0.55*" />
            <RowDefinition Height="5*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.18*" />
            <ColumnDefinition Width="5*" />
        </Grid.ColumnDefinitions>
